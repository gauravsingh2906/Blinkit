<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_240sdp"

        android:backgroundTint="@color/white"
        android:elevation="0dp"
        app:cardCornerRadius="13.00dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <com.denzcoskun.imageslider.ImageSlider
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:layout_weight="0.5"
                    android:background="#DDDDDD"
                    app:iss_auto_cycle="false"
                    app:iss_text_align="CENTER" />

                <!--            <com.denzcoskun.imageslider.ImageSlider-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="156dp"-->
                <!--                android:layout_marginStart="@dimen/_10sdp"-->
                <!--                android:layout_weight="0.5"-->
                <!--                android:background="#DDDDDD"-->
                <!--                app:iss_auto_cycle="false"-->
                <!--                app:iss_text_align="CENTER" />-->

                <TextView
                    android:id="@+id/tvProductTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#DDDDDD"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="19.50dp" />

                <TextView
                    android:id="@+id/tvProductQuantity1"
                    android:layout_width="@dimen/_47ssp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#DDDDDD"

                    android:textSize="15.60sp" />

                <TextView
                    android:id="@+id/tvProductPrice1"
                    android:layout_width="@dimen/_35ssp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#DDDDDD"
                    android:textSize="15.60sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAdd1"
                    android:layout_width="78.00dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:padding="5.20dp"
                    android:text="Edit"
                    android:textColor="@color/green"
                    android:textSize="14.30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <com.denzcoskun.imageslider.ImageSlider
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    android:layout_weight="0.5"
                    android:background="#DDDDDD"
                    app:iss_auto_cycle="false"
                    app:iss_text_align="CENTER" />

                <!--            <com.denzcoskun.imageslider.ImageSlider-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="156dp"-->
                <!--                android:layout_marginStart="@dimen/_10sdp"-->
                <!--                android:layout_weight="0.5"-->
                <!--                android:background="#DDDDDD"-->
                <!--                app:iss_auto_cycle="false"-->
                <!--                app:iss_text_align="CENTER" />-->

                <TextView
                    android:id="@+id/tvProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#DDDDDD"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="19.50dp" />

                <TextView
                    android:id="@+id/tvProductQuantity"
                    android:layout_width="@dimen/_47ssp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#DDDDDD"

                    android:textSize="15.60sp" />

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="@dimen/_35ssp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="#DDDDDD"
                    android:textSize="15.60sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAdd"
                    android:layout_width="78.00dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:padding="5.20dp"
                    android:text="Edit"
                    android:textColor="@color/green"
                    android:textSize="14.30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>