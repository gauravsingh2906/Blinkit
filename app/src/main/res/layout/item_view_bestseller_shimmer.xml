<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="131.00dp"
    android:layout_marginEnd="9.10dp"
    android:layout_height="@dimen/_170sdp">

    <LinearLayout
        android:id="@+id/llProductImages"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_95sdp"
        android:background="#DDDDDD"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="130.00dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivProduct1"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/instant"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivProduct2"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/masala"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130.00dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivProduct3"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/cold_and_juices"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:text="+1"
                android:textColor="#DDDDDD"
                android:textSize="23.40sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/llProductImages"
        app:layout_constraintStart_toStartOf="@+id/llProductImages"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"

            android:background="#DDDDDD"
            android:textSize="14.3dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"

            android:background="#DDDDDD"
            android:textSize="14.3dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />


        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"
            android:background="#DDDDDD"
            android:gravity="center"
            android:padding="5.20dp"
            android:textSize="14.3dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>