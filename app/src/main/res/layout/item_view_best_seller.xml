<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="136.00dp"
    android:layout_height="@dimen/_180sdp"

    android:layout_marginEnd="9.10dp">

    <LinearLayout
        android:id="@+id/llProductImages"
        android:layout_width="135dp"
        android:layout_height="130dp"
        android:background="@drawable/bg_bestsellers"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="135.00dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal"
            android:visibility="visible">


            <ImageView
                android:id="@+id/ivProduct1"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"

                android:background="@drawable/bg_product"
                android:src="@drawable/instant"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivProduct2"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/masala"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130.00dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal"
            android:visibility="visible">


            <ImageView
                android:id="@+id/ivProduct3"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/cold_and_juices"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:text="+1"
                android:textColor="@color/black"
                android:textSize="23.40sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/llProductImages"
        app:layout_constraintTop_toBottomOf="@+id/llProductImages">

        <TextView
            android:id="@+id/tvProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"
            android:text="Milk, Curd and Paneer"
            android:textColor="@color/black"
            android:textSize="14.3dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"
            android:text="4 products"
            android:textColor="#847F7F"
            android:textSize="14.3dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />


        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_see_all"
            android:gravity="center"
            android:padding="5.20dp"

            android:text="See all"
            android:textColor="@color/green"
            android:textSize="14.3dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>